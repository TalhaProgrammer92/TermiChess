{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run ChessGame",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/ChessGame",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build chess",
        // "miDebuggerPath": "/usr/bin/gdb"  // for Linux
        "miDebuggerPath": "C:/MinGW/bin/gdb.exe"  // for Windows
      }
    ]
  }
  